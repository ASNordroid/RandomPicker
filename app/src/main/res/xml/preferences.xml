<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <CheckBoxPreference
        android:key="joke"
        android:title="Статистика"
        android:summary="Отправлять все картинки куратору в ФСБ?"
        android:defaultValue="true"
        android:disableDependentsState="false" />
    <EditTextPreference
        android:key="numberOfPics"
        android:title="Количество картинок"
        android:summary="Не рекомендуется указывать значение больше 100."
        android:defaultValue="10" />
    <com.example.ant.randomrei.TimePreference
        android:key="timepicker"
        android:title="Время обновления"
        android:dialogTitle=""
        android:negativeButtonText="Cancel"
        android:positiveButtonText="OK"
        tools:context=".MyPreferenceActivity" />
</PreferenceScreen>